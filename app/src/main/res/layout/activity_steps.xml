<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frontPageConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/frontpage"
            android:layout_width="414dp"
            android:layout_height="213dp"
            android:foreground="@drawable/bg_alternative"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"
            android:src="@drawable/tostadas_de_pollo_con_lechuga"
            app:layout_constraintBaseline_toTopOf="parent"
            tools:layout_editor_absoluteX="-3dp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name_recipe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tostada de pollo con lechuga"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="171dp"
            app:layout_constraintStart_toStartOf="@id/frontpage"
            app:layout_constraintEnd_toEndOf="@id/frontpage"
            app:layout_constraintTop_toTopOf="@id/frontpage"
            android:layout_marginTop="55dp"
            app:shapeAppearanceOverlay="@style/RoundedImageView"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cooker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/frontPageConstraint"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/userimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/img_burger"
            app:layout_constraintTop_toTopOf="@+id/cooker"
            android:layout_marginStart="15dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPoster"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/ubuntumedium"
            android:text="username"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/userimg"
            app:layout_constraintTop_toTopOf=""
            tools:layout_editor_absoluteY="5dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ingredientsConstraint"
        android:layout_width="412dp"
        android:layout_height="155dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cooker">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/descriptionTitle"
            android:layout_width="183dp"
            android:layout_height="43dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/ubuntumedium"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="30dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescription"
            android:layout_width="354dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/ubunturegular"
            android:text="The description of the recipe has to be contained int this pace"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descriptionTitle"
            app:layout_goneMarginStart="30dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ingredientTitle"
            android:layout_width="183dp"
            android:layout_height="43dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/ubuntumedium"
            android:text="Ingredients"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:layout_goneMarginStart="30dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>